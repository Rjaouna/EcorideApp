{# templates/partials/_navbar.html.twig #}
<nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
  <div class="container">
    {# Brand #}
    <a class="navbar-brand d-flex align-items-center" href="{{ path('app_home') }}">
      <img src="{{ asset('assets/images/logo.svg') }}" alt="Logo" height="32" class="me-2">
    </a>



    <div class="collapse navbar-collapse" id="mainNavbar">
      {# Left: primary nav #}
      <ul class="navbar-nav me-auto">
        <li class="nav-item">
          <a class="nav-link" href="{{ path('app_pages_how_it_works') }}">
             Comment ça marche ?
          </a>
        </li>

        <li class="nav-item">
          <a class="nav-link fw-semibold" href="#">
             Trouver un trajet
          </a>
        </li>

        <li class="nav-item">
          <a class="nav-link" href="{{ path('app_contact') }}">
             Contact
          </a>
        </li>
      </ul>

      {# Right: quick widgets + account #}
      <ul class="navbar-nav ms-auto align-items-lg-center">

     

        {# Inbox #}
        <li class="nav-item ms-md-2">
          <a id="navInbox" class="nav-link d-flex align-items-center" href="{{ path('app_contact_message_index') }}">
            <i class="bi bi-envelope {{ unreadCount > 0 ? 'text-danger' : '' }}"></i>
            {% if unreadCount > 0 %}
              <span class="badge bg-danger ms-1">{{ unreadCount }}</span>
            {% endif %}
          </a>
        </li>

        {# Compte #}
        <li class="nav-item dropdown ms-md-2">
          {% if app.user %}
            {% set pseudo    = app.user.pseudo ?? (app.user.email|split('@')[0]) %}
            {% set initial   = (pseudo|slice(0,1)|upper) %}
            {% set isDriver  = 'ROLE_DRIVER' in app.user.roles %}
            {% set modeLabel = isDriver ? 'Conducteur' : 'Passager' %}
            {% set modeBadge = isDriver ? 'success' : 'primary' %}
            {% set switchIcon= isDriver ? 'bi-person' : 'bi-car-front' %}
            {% set switchLbl = isDriver ? 'Passer en mode Passager' : 'Passer en mode Conducteur' %}

            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="navAccount"
               role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <span class="rounded-circle d-inline-flex align-items-center justify-content-center me-2"
                    style="width:28px;height:28px;background:rgba(0,0,0,.08);">
                <strong class="small">{{ initial }}</strong>
              </span>
              <span class="d-none d-lg-inline">{{ pseudo }}</span>
            </a>

            <div class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="navAccount" style="min-width: 260px;">
              <div class="px-3 py-2 small">
                <div class="fw-semibold">{{ pseudo }}</div>
                <div class="text-muted">Mode :
                  <span class="badge bg-{{ modeBadge }}">{{ modeLabel }}</span>
                </div>
              </div>
              <div class="dropdown-divider"></div>

              <a class="dropdown-item" href="{{ path('app_profile') }}">
                <i class="bi bi-person-circle me-2"></i> Mon profil
              </a>
              <a class="dropdown-item" href="{{ path('app_preference_utilisateur_index') }}">
                <i class="bi bi-sliders2 me-2"></i> Mes préférences
              </a>

              {# Accès conducteur : Mes covoiturages + Publier #}
              {% if isDriver %}
                <a class="dropdown-item" href="{{ path('app_couvoiturage_index') }}">
                  <i class="bi bi-calendar2-event me-2"></i> Mes covoiturages
                </a>
                <a class="dropdown-item" href="{{ path('app_couvoiturage_new') }}">
                  <i class="bi bi-plus-circle me-2"></i> Publier un trajet
                </a>
              {% endif %}

              <div class="dropdown-divider"></div>

              <form method="post" action="{{ path('app_switch_mode') }}">
                <input type="hidden" name="_token" value="{{ csrf_token('switch_mode') }}">
                <button type="submit" class="dropdown-item d-flex align-items-center">
                  <i class="bi {{ switchIcon }} me-2"></i> {{ switchLbl }}
                </button>
              </form>

              <div class="dropdown-divider"></div>

              <a class="dropdown-item text-danger" href="{{ path('app_logout') }}">
                <i class="bi bi-box-arrow-right me-2"></i> Déconnexion
              </a>
            </div>
          {% else %}
            <a class="nav-link dropdown-toggle" href="#" id="navAccount" role="button"
               data-bs-toggle="dropdown" aria-expanded="false">
              Mon compte
            </a>
            <div class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="navAccount">
              <a class="dropdown-item" href="{{ path('app_login') }}">
                <i class="bi bi-box-arrow-in-right me-2"></i> Connexion
              </a>
              <a class="dropdown-item" href="{{ path('app_register') }}">
                <i class="bi bi-person-plus me-2"></i> Créer mon compte
              </a>
            </div>
          {% endif %}
        </li>
      </ul>
    </div>
  </div>
</nav>

{# Hover "inbox" lisible #}
<script>
document.addEventListener('DOMContentLoaded', () => {
  const el = document.getElementById('navInbox');
  if (!el) return;
  const original = el.innerHTML;
  el.addEventListener('mouseenter', () => {
    el.innerHTML = '<i class="bi bi-envelope-open me-1"></i> Boîte de réception' + 
      ({{ unreadCount|default(0) }} > 0 ? ' <span class="badge bg-danger ms-1">{{ unreadCount }}</span>' : '');
  });
  el.addEventListener('mouseleave', () => { el.innerHTML = original; });
});
</script>
