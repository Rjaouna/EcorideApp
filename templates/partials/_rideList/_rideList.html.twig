<div class="my-5 container">
<hr class="hr-blurry">

    <h2 class="text-center fw-bold mb-5">
        Trouvez facilement votre prochain covoiturage. Voyagez malin, économique...
    </h2>

    <div class="row g-4">
        {% set rides = [
            {'from': 'Paris', 'to': 'Lyon', 'date': '2024-06-01 08:00', 'price': '25€', 'driver': 'Jean Dupont'},
            {'from': 'Marseille', 'to': 'Nice', 'date': '2024-06-02 10:30', 'price': '20€', 'driver': 'Marie Lemoine'},
            {'from': 'Bordeaux', 'to': 'Toulouse', 'date': '2024-06-03 14:00', 'price': '18€', 'driver': 'Ahmed Ben'},
            {'from': 'Lille', 'to': 'Bruxelles', 'date': '2024-06-04 09:00', 'price': '30€', 'driver': 'Sophie Martin'}
        ] %}

        {% for ride in rides %}
            <div class="col-md-3">
                <div class="card h-100 shadow-sm">
                    <div class="card-body d-flex flex-column justify-content-between">
                        <div>
                            <h5 class="fw-bold">{{ ride.from }} → {{ ride.to }}</h5>
                            <p class="text-muted small">
                                {{ ride.date }}
                            </p>
                            <p class="fw-bold text-primary">
                                {{ ride.price }}
                            </p>
                        </div>
                        <div class="mt-3">
                            <p class="small text-muted mb-0">Conducteur :</p>
                            <p class="fw-bold">{{ ride.driver }}</p>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    {# Bouton centré #}
    <div class="text-center mt-5">
        <a href="#" class="btn btn-primary fw-bold text-white">
            Voir tous les trajets
        </a>
    </div>
</div>
