{% extends 'base.html.twig' %}
{% block title %}Register{% endblock %}

{# Utilise le thème Bootstrap 5 pour les champs #}
{% form_theme registrationForm 'bootstrap_5_layout.html.twig' %}

{% block body %}
<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-8">

      {# En-tête #}
      <div class="mb-4 text-center">
        <h1 class="h3 mb-2">Créer un compte</h1>
        <p class="text-muted mb-0">Renseignez les informations requises pour activer votre espace.</p>
      </div>

      {# Flash errors #}
      {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          {{ flash_error }}
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
        </div>
      {% endfor %}

      <div class="card border-0 shadow-sm">
        <div class="card-body p-4">

          {{ form_start(registrationForm, {'attr': {'novalidate': 'novalidate'}}) }}
            {{ form_errors(registrationForm) }}

            <div class="row g-3">
              <div class="col-md-6">
                {{ form_row(registrationForm.nom, {'attr': {'placeholder': 'Votre nom'}}) }}
              </div>
              <div class="col-md-6">
                {{ form_row(registrationForm.prenom, {'attr': {'placeholder': 'Votre prénom'}}) }}
              </div>

              <div class="col-md-6">
                {{ form_row(registrationForm.email, {'attr': {'placeholder': 'vous@exemple.com'}}) }}
              </div>
              <div class="col-md-6">
                {{ form_row(registrationForm.telephone, {'attr': {'placeholder': 'Ex. 06 12 34 56 78'}}) }}
              </div>

              <div class="col-12">
                {{ form_row(registrationForm.adresse, {'attr': {'placeholder': 'Adresse complète'}}) }}
              </div>

              <div class="col-md-6">
                {# Assure-toi que le champ est en widget single_text dans le FormType #}
                {{ form_row(registrationForm.naissanceAt, {'label': 'Date de naissance'}) }}
              </div>
              <div class="col-md-6">
                {{ form_row(registrationForm.sexe, {'attr': {'data-placeholder': 'Sélectionnez…'}}) }}
              </div>

              <div class="col-md-6">
                {{ form_row(registrationForm.pseudo, {'attr': {'placeholder': 'Votre pseudo public'}}) }}
              </div>
              <div class="col-md-6">
                {{ form_row(registrationForm.plainPassword, {'label': 'Mot de passe', 'attr': {'placeholder': 'Au moins 8 caractères'}}) }}
              </div>

              <div class="col-12">
                <div class="d-flex align-items-start gap-2">
                  {{ form_widget(registrationForm.agreeTerms) }}
                  <div>
                    {{ form_label(registrationForm.agreeTerms) }}
                    <div class="form-text">En cochant, vous acceptez nos conditions générales d’utilisation.</div>
                  </div>
                </div>
                {{ form_errors(registrationForm.agreeTerms) }}
              </div>

              <div class="col-12 d-flex justify-content-end">
                <button type="submit" class="btn btn-primary px-4">
                  S’inscrire
                </button>
              </div>
            </div>

          {{ form_end(registrationForm) }}
        </div>
      </div>

      <div class="text-center mt-3">
        <small class="text-muted">Déjà inscrit ? <a href="{{ path('app_login') }}">Se connecter</a></small>
      </div>

    </div>
  </div>
</div>
{% endblock %}
