{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
<section id="heroContact" class="py-5 bg-light">
  <div class="container-fluid">
    <div class="row justify-content-center">
      <div class="col-12 col-md-10 col-lg-8">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <h2 class="h3 text-primary mb-3">Contactez-nous</h2>
            <p class="lead mb-0">
              Une question ? Laissez-nous un message, on vous répond rapidement.
            </p>
          </div>
        
        </div>
        <hr class="hr-blurry">
      </div>
    </div>
  </div>
</section>

<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-8">



      <div class="card border-0 shadow-sm">
        <div class="card-body p-4">
          {{ form_start(form) }}

          <div class="row g-3">
            <div class="col-md-6">
              <label class="form-label">{{ form_label(form.nom) }}</label>
              {{ form_widget(form.nom, {
                attr: {
                  class: 'form-control' ~ (form.nom.vars.errors|length ? ' is-invalid' : ''),
                  placeholder: 'Votre nom'
                }
              }) }}
              {% if form.nom.vars.errors|length %}
                <div class="invalid-feedback d-block">{{ form_errors(form.nom) }}</div>
              {% endif %}
            </div>

            <div class="col-md-6">
              <label class="form-label">{{ form_label(form.email) }}</label>
              {{ form_widget(form.email, {
                attr: {
                  class: 'form-control' ~ (form.email.vars.errors|length ? ' is-invalid' : ''),
                  placeholder: 'votre@email.com'
                }
              }) }}
              {% if form.email.vars.errors|length %}
                <div class="invalid-feedback d-block">{{ form_errors(form.email) }}</div>
              {% endif %}
            </div>

            <div class="col-12">
              <label class="form-label">{{ form_label(form.message) }}</label>
              {{ form_widget(form.message, {
                attr: {
                  class: 'form-control' ~ (form.message.vars.errors|length ? ' is-invalid' : ''),
                  rows: 6,
                  placeholder: 'Écrivez votre message...'
                }
              }) }}
              {% if form.message.vars.errors|length %}
                <div class="invalid-feedback d-block">{{ form_errors(form.message) }}</div>
              {% endif %}
            </div>

            <div class="col-12 d-flex justify-content-between align-items-center">
              <small class="text-muted">
                En envoyant ce formulaire, vous acceptez d’être recontacté(e) au sujet de votre demande.
              </small>
              <button class="btn btn-primary px-4">Envoyer</button>
            </div>
          </div>

          {{ form_end(form) }}
        </div>
      </div>

      

    </div>
  </div>
</div>
{% endblock %}
