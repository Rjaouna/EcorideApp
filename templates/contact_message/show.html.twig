{% extends 'base.html.twig' %}

{% block title %}Message #{{ contact_message.id }} – {{ contact_message.name }}{% endblock %}

{% block body %}
<div class="container py-4">

    {% set statusClasses = {
        'new': 'primary',
        'read': 'success',
        'archived': 'secondary',
        'spam': 'danger'
    } %}
    {% set statusClass = statusClasses[contact_message.status|lower]|default('secondary') %}

    <div class="d-flex align-items-center mb-4">
        <div class="rounded-circle me-3 d-flex align-items-center justify-content-center"
             style="width:44px;height:44px;background:rgba(0,0,0,.05);">
            <strong>{{ contact_message.name|slice(0,1)|upper }}</strong>
        </div>
        <div>
            <h1 class="h4 mb-1">
                {{ contact_message.name }}
                <span class="badge bg-{{ statusClass }} ms-2 text-uppercase">{{ contact_message.status }}</span>
            </h1>
        </div>
        <div class="ms-auto">
            <a href="{{ path('app_contact_message_index') }}" class="btn btn-outline-secondary">
                ← Back to list
            </a>
        </div>
    </div>

    <div class="row g-4">
        {# Colonne message #}
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header">
                    <strong>Message</strong> <span class="text-muted">#{{ contact_message.id }}</span>
                </div>
                <div class="card-body">
                    <div class="fs-6">
                        {{ contact_message.message|nl2br }}
                    </div>
                </div>
            </div>

            {% if contact_message.note %}
                <div class="card shadow-sm mt-3">
                    <div class="card-header">
                        <strong>Note interne</strong>
                    </div>
                    <div class="card-body text-muted" >
                        {{ contact_message.note|nl2br }}
                    </div>
                </div>
            {% endif %}
        </div>

        {# Colonne détails + actions #}
        <div class="col-lg-4">
            <div class="card shadow-sm mb-3">
                <div class="card-header">
                    <strong>Détails</strong>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-5 text-muted">Nom</dt>
                        <dd class="col-7">{{ contact_message.name }}</dd>

                        <dt class="col-5 text-muted">Email</dt>
                        <dd class="col-7">
                            <a href="mailto:{{ contact_message.email }}">{{ contact_message.email }}</a>
                        </dd>

                        <dt class="col-5 text-muted">Date d'envoi</dt>
                        <dd class="col-7">
                            {{ contact_message.createdAt ? contact_message.createdAt|date('d/m/Y H:i') : '—' }}
                        </dd>

                        <dt class="col-5 text-muted">Date d'ouverture</dt>
                        <dd class="col-7">
                            {{ contact_message.readAt ? contact_message.readAt|date('d/m/Y H:i') : '—' }}
                        </dd>

                        <dt class="col-5 text-muted">Statut</dt>
                        <dd class="col-7">
                            <span class="badge bg-{{ statusClass }} text-uppercase">{{ contact_message.status }}</span>
                        </dd>
                    </dl>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header">
                    <strong>Actions</strong>
                </div>
                <div class="card-body d-grid gap-2">
                    <a class="btn btn-primary"
                       href="mailto:{{ contact_message.email }}?subject={{ ('Re: Contact #' ~ contact_message.id)|url_encode }}">
                        Reply by email
                    </a>

                    <form method="post"
                          action="{{ path('app_contact_message_archive', {'id': contact_message.id}) }}"
                          onsubmit="return confirm('Archiver ce message ?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('archive' ~ contact_message.id) }}">
                        <button class="btn btn-warning w-100" {% if contact_message.status == 'archived' %}disabled{% endif %}>
                            Archive
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
