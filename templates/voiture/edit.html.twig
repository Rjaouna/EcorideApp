{% extends 'base.html.twig' %}
{% block title %}Modifier la voiture{% endblock %}

{% block body %}
<section class="py-5 bg-light">
  <div class="container">
    <div class="d-flex justify-content-between align-items-center">
      <div>
        <h1 class="h4 text-primary mb-1">Modifier la voiture</h1>
        <p class="text-muted mb-0">Mettez à jour les informations de votre véhicule.</p>
      </div>
      <div class="text-end">
        <a href="{{ path('app_voiture_index') }}" class="btn btn-outline-secondary">
          ← Retour à la liste
        </a>
      </div>
    </div>
    <hr class="mt-4">
  </div>
</section>

<div class="container my-4">
  <div class="row g-4">

    {# --- Formulaire --- #}
    <div class="col-lg-8">
      <div class="card border-0 shadow-sm">
        <div class="card-body p-4">
          {# Si tu utilises Bootstrap 5 pour les forms, active le thème : #}
          {# {% form_theme _self 'bootstrap_5_layout.html.twig' %} #}

          {{ include('voiture/_form.html.twig', { button_label: 'Enregistrer les modifications' }) }}
        </div>
      </div>
    </div>

    {# --- Actions --- #}
    <div class="col-lg-4">
      <div class="card border-0 shadow-sm">
        <div class="card-header bg-white">
          <strong>Actions</strong>
        </div>
        <div class="card-body d-grid gap-2">
         
          {{ include('voiture/_delete_form.html.twig') }}
          <a href="{{ path('app_profile') }}" class="btn btn-outline-secondary">
            Mon profil
          </a>
        </div>
      </div>
    </div>

  </div>
</div>
{% endblock %}
