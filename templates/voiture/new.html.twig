{% extends 'base.html.twig' %}

{% block title %}Nouvelle voiture{% endblock %}

{% block body %}
<section class="py-5 bg-light">
  <div class="container">
    <div class="d-flex justify-content-between align-items-center">
      <div>
        <h1 class="h4 text-primary mb-1">Ajouter une nouvelle voiture</h1>
        <p class="text-muted mb-0">
          Renseignez les informations essentielles de votre véhicule (marque, modèle, immatriculation, énergie, couleur, date de mise en circulation).
        </p>
      </div>
      
    </div>
    <hr class="mt-4">
  </div>
</section>

<div class="container my-4">
  <div class="row g-4">

    {# --- Formulaire dans une carte --- #}
    <div class="col-lg-8">
      <div class="card border-0 shadow-sm">
        <div class="card-body p-4">
          {{ include('voiture/_form.html.twig', { button_label: 'Enregistrer' }) }}
        </div>
      </div>
    </div>

    {# --- Colonne d’actions/cohérence UI --- #}
    <div class="col-lg-4">
      <div class="card border-0 shadow-sm">
        <div class="card-header bg-white">
          <strong>Actions</strong>
        </div>
        <div class="card-body d-grid gap-2">
          <a href="{{ path('app_profile') }}" class="btn btn-outline-secondary">
            Mon profil
          </a>
        </div>
      </div>
    </div>

  </div>
</div>
{% endblock %}
